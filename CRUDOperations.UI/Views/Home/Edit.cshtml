@using CRUDOPeration.Domain.Entities
@model Product
@{
    ViewData["Title"] = "Edit";
}

<title>Edit Product</title>
<form method="post" class="w-25 card container my-5">
    <h4 class="p-3">Edit Product</h4>
    <hr />
    <div class="form-group p-3">
        <label>Id:</label>
        <input type="text" asp-for="ID" class="form-control float-end" disabled/>
    </div>
    <hr />
    <div class="form-group p-3">
        <label>Product Name:</label>
        <input type="text" asp-for="Name" class="form-control float-end"/>
        <hr />
        <span asp-validation-for="Name"></span>
    </div>
    <hr />
    <div class="form-group p-3">
        <label>Product Price:</label>
        <input type="number" asp-for="Price" class="form-control float-end"/>
        <hr />
        <span asp-validation-for="Price"></span>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary float-end m-3">Edit Product</button>
</form>

